    test1[7] = 2;
    test1[8] = 0 - 2;
    test1[9] = 0 - 8;

    print("Initial int array [");
    for(int i = 0; i < 10; i = i+1){
        print(test1[i]);
        if(i != 9){
            print(",");
        }
    }

    //sort
    test1 = selectionSort(test1); 

    print("] \nSorted int array [");
    for(int i = 0; i < 10; i = i+1){
        print(test1[i]);
        if(i != 9){
            print(",");
        }
    }
    print("]\n");


