// This program implements an overloaded selection sort function and a swap function for ints and doubles.
//----------------------------------------------------------------------


array int swap(array int xs, int x, int y){
    int temp = xs[x];
    xs[x] = xs[y];
    xs[y] = temp;
    return xs;
}

array double swap(array double xs, int x, int y){
    double temp = xs[x];
    xs[x] = xs[y];
    xs[y] = temp;
    return xs;
}

array int selectionSort(array int xs){
    for(int i = 0; i < length(xs) - 1; i = i+1){
        int minIndex = i;
        for(int j = i+1; j < length(xs); j = j+1){
            if(xs[j] < xs[minIndex]){
                minIndex = j;
            }
        }
        if (minIndex != i){
            xs = swap(xs, minIndex, i);
        }
    }
    return xs;
}

array double selectionSort(array double xs){
    for(int i = 0; i < length(xs) - 1; i = i+1){
        int minIndex = i;
        for(int j = i+1; j < length(xs); j = j+1){
            if(xs[j] < xs[minIndex]){
                minIndex = j;
            }
        }
        if (minIndex != i){
            xs = swap(xs, minIndex, i);
        }
    }
    return xs;
}
void main() {
    array int test1 = new int[10];

    //initilize values
    test1[0] = 2;
    test1[1] = 1;
    test1[2] = 54;
    test1[3] = 6;
